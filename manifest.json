{
  "name": "Translator",
  "description": "Right Click to translate selected text using Google Translate",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "js/service_worker.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "storage"
  ]
}
